[user]
    name = Maia
    email = maia.mcc@gmail.com
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[color]
    ui = auto
[alias]
    a = add -A
    d = diff
    dno = diff --name-only
    st = status
    co = checkout
    cp = cherry-pick
    b = branch
    cob = checkout -b
    cm = commit -m
    ca = commit --amend --no-edit
    cae = commit --amend # commit amend EDIT
    log = log --stat
    l = log --pretty=format:'%Cred%h%Creset - %C(yellow)<%an>%Creset %s %Cgreen(%cr)' --abbrev-commit
    lol = log --pretty=format:'%Cred%h%Creset - %C(yellow)<%an>%Creset %s %Cgreen(%cr)' --abbrev-commit -n 15
    pull = pull --rebase
    pullom = pull origin $MAIN_BRANCH
    pushom = push origin $MAIN_BRANCH
    rebm = rebase $MAIN_BRANCH
    rebi = rebase -i
    rebcont = rebase --continue
    rebabt = rebase --abort
    rest = reset head~

    # https://github.com/dpup/git-workflow
    pr = pull-request
[grep]
    lineNumber = true
[push]
    default = current

[include]
  path = ~/.gitconfig_local
